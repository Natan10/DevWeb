<%- include('partials/admin-navbar.ejs') %>

<section class="content">
  <div class="container navbar-container">
    <div class="tables">
      <% if(data){ %>
      <div id="user-table">
        <div class="table-header">
          <h2>Usuários</h2>
          <button class="open-button user">+</button>
        </div>
        <table>
          <thead>
            <tr>
              <th class="id">Id</th>
              <th class="name">Nome</th>
              <th class="label">E-mail</th>
              <th class="info">Tipo de usuário</th>
              <th class="actions">Ações</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
      <% } %>

      <div id="promo-table">
        <div class="table-header">
          <h2>Promoções</h2>
          <button class="open-button promotion">+</button>
        </div>
        <table>
          <thead>
            <tr>
              <th>Id</th>
              <th>Nome</th>
              <th>Preço</th>
              <th>Descrição</th>
              <th>Data de criação</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>

      <!-- Add Modal -->
  <div class="adm-modal-container hide">
    <div class="adm-modal">
      <div class="adm-modal-header">
        <h4>Tittle</h4>
      </div>
      <hr />
      <div class="adm-modal-form"></div>
      <hr />
      <div class="adm-modal-actions">
        <button class="btn cancel">Cancel</button>
        <button class="btn action">Salvar</button>
      </div>
    </div>
  </div>
</section>

<!-- Config button -->
<div class="config-box">
  <img class="config-icon" src="./assets/cog.png" alt="condiguração" />
</div>

<!-- Configue modal -->
<div class="config-modal">
  <span class="title">Tamanho de fonte:</span>
  <div class="font-config">
    <span class="label-txt">Média</span>
    <label class="switch">
      <input type="checkbox" />
      <span class="slider round"></span>
    </label>
    <span class="label-txt">Grande</span>
  </div>

  <span class="title">Tema:</span>
  <div class="theme-config">
    <img class="label-img" src="./assets/lightbulb_outline.png" alt="" />
    <div class="switch-button">
      <label class="switch">
        <input type="checkbox" />
        <span class="slider round"></span>
      </label>
    </div>
    <img class="label-img" src="./assets/lightbulb.png" alt="" />
  </div>
</div>

<script src="scripts/iziToast.js" type="text/javascript"></script>
<script src="scripts/config-modal.js" type="text/javascript"></script>
<script src="scripts/register-modals.js" type="text/javascript"></script>
<script src="scripts/table-populate.js" type="text/javascript"></script>
<script src="scripts/user-scripts.js" type="text/javascript"></script>
<script src="scripts/promotion-scripts.js" type="text/javascript"></script>

