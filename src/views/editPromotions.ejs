    <!-- Config button -->
    <div class="config-box">
      <img class="config-icon" src="./assets/cog.png" alt="condiguração" />
    </div>

    <!-- Configue modal -->
    <div class="config-modal">
      <span class="title">Tamanho de fonte:</span>
      <div class="font-config">
        <span class="label-txt">Média</span>
        <label class="switch">
          <input type="checkbox" />
          <span class="slider round"></span>
        </label>
        <span class="label-txt">Grande</span>
      </div>

      <span class="title">Tema:</span>
      <div class="theme-config">
        <img class="label-img" src="./assets/lightbulb_outline.png" alt="" />
        <div class="switch-button">
          <label class="switch">
            <input type="checkbox" />
            <span class="slider round"></span>
