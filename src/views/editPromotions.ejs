  <body>
    <nav class="navbar navbar-collapse navbar-expand-lg">
      <div class="container navbar-container">
        <a class="navbar-brand" href="#">
          <img src="assets/fp1.png" alt="logo" class="img-fluid" />
        </a>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/">Home</a>
            <a class="nav-link" href="#">Perfil</a>
            <a class="nav-link" href="#">Foto perfil</a>
          </div>
        </div>
      </div>
    </nav>

    <section class="content addForm">
      <div class="container navbar-container">
        <div class="registerPromotion">
          <form id="formEditPromotion">
            <h1>Edição de promoção</h1>

            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default"
                  >id</span
                >
              </div>
              <input
                type="text"
                class="form-control"
                id="id"
                readonly
                value="<%= promotion.id %>"
              />
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default"
                  >Nome</span
                >
              </div>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Insira o nome do produto"
                value="<%= promotion.nome %>"
              />
            </div>

            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default"
                  >Preço</span
                >
              </div>
              <input
                type="number"
                class="form-control"
                id="price"
                step="0.01"
                min="0"
                placeholder="Insira o preço produto"
                value="<%= promotion.preco %>"
              />
            </div>

            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default"
                  >Link</span
                >
              </div>
              <input
                type="text"
                class="form-control"
                id="link"
                placeholder="Insira a url de uma foto do produto"
                value="<%= promotion.link %>"
              />
            </div>

            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">Detalhes</span>
              </div>
              <textarea id="description" class="form-control">
 <%= promotion.descricao %></textarea
              >
            </div>

            <div class="buttons">
              <button type="submit" class="register-button btn btn-success">
                Salvar
              </button>
              <a href="/admin">
                <button type="button" class="cancel-button btn btn-link">
                  Cancelar
                </button>
              </a>
            </div>
          </form>
        </div>
      </div>
    </section>

