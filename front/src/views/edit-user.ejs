<%- include('partials/admin-navbar.ejs') %>

<section class="content addForm">
  <div class="container navbar-container">
    <div class="registerPromotion">
      <form id="formEditUser">
        <h1>Edição de usuários</h1>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default"
              >id</span
            >
          </div>
          <input
            type="text"
            class="form-control"
            id="id"
            readonly
            value="<%= user.id %>"
          />
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default"
              >Nome</span
            >
          </div>
          <input
            type="text"
            class="form-control"
            id="nome"
            placeholder="Insira o nome do usuário"
            value="<%= user.nome %>"
          />
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default"
              >Email</span
            >
          </div>
          <input
            type="text"
            class="form-control"
            id="email"
            placeholder="Insira o email do usuário"
            value="<%= user.email %>"
          />
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default"
              >Senha</span
            >
          </div>
          <input
            type="text"
            class="form-control"
            id="password"
            placeholder="********"
          />
        </div>

        <div class="form-check">
          <% if(user.isAdmin) { %>
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="isAdmin"
            checked
          />
          <% } else { %>
          <input
            class="form-check-input"
            type="checkbox"
            value=""
            id="isAdmin"
          />
          <% } %>
          <label class="form-check-label" for="flexCheckDefault">
            Tornar gerente?
          </label>
        </div>

        <div class="buttons">
          <button type="submit" class="register-button btn btn-success">
            Salvar
          </button>
          <a href="/admin">
            <button type="button" class="cancel-button btn btn-link">
              Voltar
            </button>
          </a>
        </div>
      </form>
    </div>
  </div>
</section>

<script src="scripts/iziToast.js" type="text/javascript"></script>
<script src="scripts/field-validation.js" type="text/javascript"></script>
<script src="scripts/edit-user.js" type="text/javascript"></script>
